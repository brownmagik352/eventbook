<h1 class="group-title"> <%= @group.name %> </h1>
<!-- <div class = "creation-time"> <%= @group.created_at %> </div> -->

<h5>Events</h5>
<br />
<% @group.events.each do |event| %>
    <div class="event-title">
      <%= event.title + ":\t"%>
      <%= event.edate.strftime("%B %d, %Y") %>
    </div>
    <br />
    <br />
<% end %>


<h4> Create a New Event </h4>
<%= form_for(@event) do |f| %>
<div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title %>
    <%= f.hidden_field :group_id, :value => @group.id %>
  </div>

  <div class = "field">
    <%= f.label :edate %>
    <%= f.date_select(:edate, :start_year => Time.now.year) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>